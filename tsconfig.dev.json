{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/dev.tsbuildinfo"
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*",
    "*.config.js",
    "*.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "backup",
    "coverage",
    ".next",
    "out"
  ]
}